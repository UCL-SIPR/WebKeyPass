{% for node in nodes %}
  <li
    {% if node.id in open_nodes %}
      class="jstree-open"
    {% endif %}
    id="node_{{ node.id }}"
    rel="{{ node.icon }}">

    {{ include('UCLWebKeyPassBundle::node_link.html.twig', {'node': node, 'node_id': node_id}) }}

    {% if node.subnodes %}
      <ul>
        {{ include('UCLWebKeyPassBundle::tree_view.html.twig', {'nodes': node.subnodes}) }}
      </ul>
    {% endif %}
  </li>
{% endfor %}
