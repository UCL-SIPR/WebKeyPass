{% extends 'UCLWebKeyPassBundle::admin.html.twig' %}

{% block contents %}
  <h3>Users List</h3>
  <table class="data">
    <tr>
      <th>User</th>
      <th>Encrypt master key</th>
    </tr>

    {% for user in users %}
      <tr>
        <td>{{ user.username }}</td>
        <td>
          {% if user.already_encrypted %}
            Encrypted
          {% else %}
            <a href="{{ path('ucl_wkp_admin_encrypt_master_key', user.route_data) }}"
               onclick="return confirm ('Are you sure you want to encrypt the master key for the user &quot;{{ user.username }}&quot;?')">Encrypt master key</a>
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </table>
{% endblock %}
